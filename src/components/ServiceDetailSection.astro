<script>
document.addEventListener('DOMContentLoaded', function() {
    const accordionTriggers = document.querySelectorAll('.accordion-trigger') as NodeListOf<HTMLButtonElement>;
    
    accordionTriggers.forEach((trigger: HTMLButtonElement) => {
        trigger.addEventListener('click', function(this: HTMLButtonElement) {
            const targetId = this.getAttribute('data-target');
            const content = targetId ? document.getElementById(targetId) : null;
            const icon = this.querySelector('.accordion-icon') as HTMLElement | null;
            
            if (!content || !icon) return;

            if (content.classList.contains('hidden')) {
                const allContents = document.querySelectorAll('.accordion-content') as NodeListOf<HTMLElement>;
                allContents.forEach((otherContent: HTMLElement) => {
                    otherContent.classList.add('hidden');
                });
                
                const allIcons = document.querySelectorAll('.accordion-icon') as NodeListOf<HTMLElement>;
                allIcons.forEach((otherIcon: HTMLElement) => {
                    otherIcon.style.transform = 'rotate(0deg)';
                });
                content.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                content.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        });
    });
});
