---

<div class="hidden md:block bg-white text-slate-950">
    <div class="px-4 md:px-14 py-8 md:py-12">
        <div class="mb-8">
            <div class="subtitle-wrapper w-full flex items-center mb-6">
                <span class="text-sm md:text-md text-sky-400 font-semibold uppercase tracking-widest whitespace-nowrap">Collaboration</span>
                <hr class="border-1 border-sky-500 w-1/3 ml-4">
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-slate-950 mb-8">Our Partners & Collaborator</h1>
            
            <div class="flex flex-col md:flex-row gap-4 items-start md:items-center justify-between mb-8">
                <div class="flex gap-4 items-center">
                    <div class="relative">
                        <select id="select-category-partner" class="p-4 pr-10 border border-gray-300 rounded-md bg-white text-slate-950 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 appearance-none cursor-pointer">
                            {categories.map(category => (
                                <option value={category}>{category}</option>
                            ))}
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                <input 
                    type="text" 
                    placeholder="Type partner name..." 
                    class="p-4 border border-gray-300 rounded-md bg-white text-slate-950 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 w-full"
                >
                <button class="px-6 py-4 bg-sky-500 text-white font-semibold rounded-md hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 transition-colors flex items-center gap-2">
                    Search
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            {partners.map(partner => (
                <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex justify-center mb-4">
                        <div class="w-30 flex items-center justify-center">
                            <img src={partner.logo} alt="partner logo" />
                        </div>
                    </div>
                    <h3 class="font-bold text-lg text-slate-950 mb-2 text-center">{partner.name}</h3>
                    <p class="text-sm text-slate-600 mb-4 text-center leading-relaxed">{partner.description}</p>
                    <div class="text-center">
                        <a href={`/partners/${partner.slug}`} class="inline-block px-4 py-2 bg-sky-500 text-white text-sm font-semibold rounded hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 transition-colors">
                            Read More
                        </a>
                    </div>
                </div>
            ))}
        </div>

        <div class="flex items-center justify-between">
            <div class="flex items-center justify-center gap-2">
                <div class="relative">
                    <select class="px-4 py-2 pr-8 border border-sky-500 rounded-lg bg-white text-sky-500 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 appearance-none cursor-pointer">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                        <svg class="w-4 h-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </div>
                </div>
                <span class="text-sm text-slate-600 mx-2">entries per page</span>
            </div>
            
            <div class="flex items-center gap-1">
                <button class="px-3 py-1 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    ‹
                </button>
                <button class="px-3 py-1 bg-sky-500 text-white rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    1
                </button>
                <button class="px-3 py-1 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    2
                </button>
                <button class="px-3 py-1 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    ›
                </button>
            </div>
        </div>
    </div>
</div>

<div class="md:hidden bg-white text-slate-950 px-4 py-6">
    <div class="subtitle-wrapper w-full flex items-center mb-6">
        <span class="text-sm text-sky-400 font-semibold uppercase tracking-widest whitespace-nowrap">Collaboration</span>
        <hr class="border-1 border-sky-500 w-full ml-4">
    </div>
    
    <h1 class="text-2xl font-bold text-slate-950 mb-6">Our Partners & Collaborator</h1>
    
    <div class="flex flex-col gap-4 mb-8">
        <div class="relative w-full">
            <select class="p-4 pr-10 border border-gray-300 rounded-md bg-white text-slate-950 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 appearance-none cursor-pointer w-full">
                {categories.map(category => (
                    <option value={category}>{category}</option>
                ))}
            </select>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>
        <input 
            type="text" 
            placeholder="Type partner name..." 
            class="p-4 border border-gray-300 rounded-md bg-white text-slate-950 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 w-full"
        >
        <button class="px-6 py-4 bg-sky-500 text-white font-semibold rounded-md hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 transition-colors flex items-center justify-center gap-2 w-full">
            Search
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </button>
    </div>

    <div class="grid grid-cols-2 gap-3 mb-6">
        {partners.slice(0, 6).map(partner => (
            <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex mb-3">
                    <div class="w-16 h-16 flex justify-center">
                        <img src={partner.logo} alt="partner logo" class="max-w-full max-h-full object-contain" />
                    </div>
                </div>
                <h3 class="font-bold text-sm text-slate-950 mb-2 leading-tight">{partner.name}</h3>
                <p class="text-xs text-slate-600 mb-3 leading-relaxed line-clamp-3">{partner.description}</p>
                <div class="text-left">
                    <a href={`/partners/${partner.slug}`} class="inline-block px-3 py-1.5 bg-sky-500 text-white text-xs font-semibold rounded hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-1 transition-colors">
                        Read More
                    </a>
                </div>
            </div>
        ))}
    </div>

    <div class="space-y-4">
        <div class="flex items-center justify-center gap-2">
            <div class="relative">
                <select class="px-4 py-2 pr-8 border border-sky-500 rounded-lg bg-white text-sky-500 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 appearance-none cursor-pointer">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                    <svg class="w-4 h-4 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </div>
            </div>
            <span class="text-sm text-slate-600 mx-2">entries per page</span>
        </div>
        
        <div class="text-center text-sm text-slate-600 mb-4">
            Showing 1 to 4 of 50 entries
        </div>
        
        <div class="flex items-center justify-center gap-2">
            <button class="px-3 py-2 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                ‹ Previous
            </button>
            <div class="flex gap-1">
                <button class="px-3 py-2 bg-sky-500 text-white rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    1
                </button>
                <button class="px-3 py-2 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                    2
                </button>
            </div>
            <button class="px-3 py-2 text-sky-500 hover:bg-sky-50 rounded text-sm font-medium focus:outline-none focus:ring-2 focus:ring-sky-500">
                Next ›
            </button>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchButtons = document.querySelectorAll('button:has-text("Search")') as NodeListOf<HTMLButtonElement>;
    const categorySelects = document.querySelectorAll('#select-category-partner') as NodeListOf<HTMLSelectElement>;
    
    searchButtons.forEach((button: HTMLButtonElement) => {
        button.addEventListener('click', function() {
            console.log('Search clicked');
        });
    });
    
    categorySelects.forEach((select: HTMLSelectElement) => {
        select.addEventListener('change', function() {
            console.log('Category changed:', this.value);
        });
    });
});
</script>